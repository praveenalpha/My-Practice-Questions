void Print(binary_node* root, int lb, int ub)
{
	if (root==nullptr)
		return;

	if (root->data>lb)
		Print(root->left, lb, ub);

	if (root->data>=lb && root->data<=ub)
		cout << root->data << " ";

	if (root->data<ub)
		Print(root->right, lb, ub);
}
